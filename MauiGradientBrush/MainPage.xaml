<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGradientBrush.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Frame BorderColor="SteelBlue"
                        HasShadow="True"
                        CornerRadius="12"
                        HeightRequest="600">
                <Frame.Background>
                    <!-- Center defaults to (0.5,0.5)
                                                 Radius defaults to (0.5) -->
                    <RadialGradientBrush Center="0.50, 0.6" Radius="0.9">
                        <GradientStop Color="MediumVioletRed" Offset="0.6" />
                    <GradientStop Color="DarkBlue" Offset="0.4" />
                    <GradientStop Color="Purple" Offset="0.9" />
                    <GradientStop Color="Red" Offset="0.8" />
                    </RadialGradientBrush>
                </Frame.Background>
                <Label Text=".NET Maui Windows" FontSize="100" TextColor="DarkOrange" TranslationX="250" TranslationY="200" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
